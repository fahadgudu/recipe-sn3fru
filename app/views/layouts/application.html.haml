!!! 5%html%head	%title Recipe App	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true	= javascript_include_tag 'application', 'data-turbolinks-track' => true	= csrf_meta_tags	%link{:href => "assets/stylesheet/metro-bootstrap.css", :rel => "stylesheet"}		%script{:src => "js/jquery/jquery.min.js"}		%script{:src => "js/jquery/jquery.widget.min.js"}		%script{:src => "js/metro/metro.min.js"}%body	%nav.navbar.navbar-default		.container			.navbar-brand= link_to "SuaReceita.com", root_path			%form.navbar-form.navbar-left{:role => "search"}				.form-group					%input.form-control.search{:placeholder => "Procurar Receitas", :type => "text"}				%button.btn.btn-default{:type => "Procurar"} Procurar			- if user_signed_in?				%ul.nav.navbar-nav.navbar-right					%li= link_to "New Recipe", new_recipe_path					%li= link_to "Sign Out", destroy_user_session_path, method: :delete			- else				%ul.nav.navbar-nav.navbar-right					%li= link_to "Sign Up", new_user_registration_path					%li= link_to "Sign In", new_user_session_path	%nav.sidebar{:class => "(light)"}		%ul			%li.title Items Group 1			%li.active				%a{:href => "#"}					%i.icon-home>					Dashboard			%li.stick.bg-red				%a{:href => "#"}					%i.icon-cog>					Layouts	.container		- flash.each do |name, msg|			= content_tag :div, msg, class: "alert"		= yield		%footer	%p Copyright &copy; #{Time.now.year} MarcosSilva.